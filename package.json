{
  "name": "youdownloader",
  "version": "1.1.0",
  "description": "youtube video downloader",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "test": "electron-builder",
    "publish": "build -p always"
  },
  "build": {
    "appId": "com.saverl.youdownloader",
    "productName": "YouDownloader",
    "copyright": "Copyright Â© year 2019 ${author}",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./app/images/icons/win/logo.ico"
    },
    "nsis": {
      "installerIcon": "./app/images/icons/win/logo.ico",
      "uninstallerIcon": "./app/images/icons/win/logo.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "uninstallDisplayName": "${productName} ${version}",
      "packElevateHelper": true,
      "unicode": true,
      "license": "./app/license"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "saurabhguptarock",
        "repo": "YouDownloader"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saurabhguptarock/YouDownloader.git"
  },
  "keywords": [
    "youtube",
    "download",
    "video",
    "downloader"
  ],
  "author": "Saverl Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saurabhguptarock/YouDownloader/issues"
  },
  "homepage": "https://github.com/saurabhguptarock/YouDownloader#readme",
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.38.5"
  },
  "dependencies": {
    "animate.css": "^3.7.0",
    "electron-is-dev": "^1.0.1",
    "electron-log": "^2.2.17",
    "electron-updater": "^4.0.6",
    "materialize-css": "^1.0.0",
    "sweetalert2": "^8.0.1",
    "youtube-dl": "^1.12.2"
  }
}
